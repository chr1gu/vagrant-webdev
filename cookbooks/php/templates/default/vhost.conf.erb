# Override the Apache User (vhosts are included at the end of apache2.conf)
User vagrant
Group vagrant

<VirtualHost *:80>
  Servername vagrant.lo
  DocumentRoot /vagrant/public
  CustomLog /vagrant/log/vagrant.access.log common
  ErrorLog /vagrant/log/vagrant.error.log
  php_value error_log /vagrant/log/antidoping.php.error.log
  <Directory "/vagrant/public">
    AllowOverride All
  </Directory>
</VirtualHost>

<VirtualHost *:80>
  Servername antidoping.lo
  DocumentRoot /antidoping.lo/trunk/www
  CustomLog /vagrant/log/antidoping.access.log common
  ErrorLog /vagrant/log/antidoping.error.log
  php_value error_log /vagrant/log/antidoping.php.error.log
  <Directory "/antidoping.lo/trunk/www">
    AllowOverride All
  </Directory>
</VirtualHost>

<VirtualHost *:80>
  Servername friend-battle.lo
  DocumentRoot /friend-battle.lo
  CustomLog /vagrant/log/friend-battle.access.log common
  ErrorLog /vagrant/log/friend-battle.error.log
  php_value error_log /vagrant/log/friend-battle.php.error.log
  <Directory "/friend-battle.lo">
    AllowOverride All
  </Directory>
</VirtualHost>
